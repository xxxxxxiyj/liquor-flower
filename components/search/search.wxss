/* components/search/search.wxss */
.container {
  width: 100%;
}
.header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
  z-index: 5;
}
.search-container {
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  margin-left: 20rpx;
  width: 80%;
  height: 60rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
}
.search-bar {
  width: 500rpx;
  font-size: 28rpx;
}
.in-search-bar {
  color: #999;
}
.icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.cancel {
  font-size: 34rpx;
}
.history {
  margin-top: 200rpx;
}
.hot-search {
  margin-top: 100rpx;
}
.title {
  margin-left: 20rpx;
  padding-left: 15rpx;
  border-left: 10rpx solid #000;
}
.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding-left: 15rpx;
  width: 650rpx;
}
.tag-item {
  padding: 4rpx 12rpx;
  margin: 10rpx 15rpx;
  font-size: 28rpx;
  border-radius: 5rpx;
  color: #666;
  background-color: #f5f5f5;
}
.book-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 160rpx;
  padding: 0 90rpx 0 90rpx;
}
.book-container v-book {
  margin-bottom: 30rpx;
}
