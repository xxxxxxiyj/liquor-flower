/* components/preview/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  width: 330rpx;
  background-color: #fff;
}
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 15rpx 10rpx 10rpx;
  width: 100%;
  box-sizing: border-box;
}
.img {
  width: 100%;
  height: 240rpx;
}
.music-img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}
.content {
  padding: 15rpx;
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}