/* components/loading/index.wxss */
.spinner {
  width: 40rpx;
  height: 40rpx;
}
.bounce1 .bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: blueviolet;
  opacity: 0.6;
  animation: bounce 2.0s infinite ease-in-out
}

@keyframes bounce {
  0%, 100% {
    transform: scale(0)
  }
  50% {
    transform: scale(1.0)
  }
}