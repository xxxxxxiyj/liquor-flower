/* pages/book/book.wxss */
.header {
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
  z-index: 5;
}
.search {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 85%;
  height: 60rpx;
  border-radius: 25rpx;
  background-color: #f5f5f5;
}
.icon-search {
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
}
.search-title {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #aaa;
}
.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  width: 100%;
}
.title-img {
  margin-top: 40rpx;
  width: 107rpx;
  height: 34rpx;
}
.book-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 90rpx 0 90rpx;
}
.book-container v-book {
  margin-bottom: 30rpx;
}